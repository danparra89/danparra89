// punto 4
let texto= "larutanosaportootropasonatural";
let letra=texto.length;
function palindromo(texto) {
    for (var i = 0; i <= letra/2;i--) {
        if (texto[i]==texto[letra-i-1]){
            console.log("Es un palindromo")
        }
            } 
}
